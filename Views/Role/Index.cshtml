@model List<InventoryBeginners.ViewModel.AssignRolesViewModel>
@{
    ViewData["Title"] = "Index";
}



<h1>List of Users and Their Roles</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Assigned Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRolesViewModel in Model)
        {
            <tr>
                <td>@userRolesViewModel.UserId</td>
                <td>@userRolesViewModel.UserName</td>
                <td>
                    <ul>
                        @foreach (var role in userRolesViewModel.Roles)
                        {
                            <li>@role.Text</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="AssignRoles" asp-route-userId="@userRolesViewModel.UserId">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
